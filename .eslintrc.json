{
  "env": {
    "browser": true,
    "es6": true
  },
  "plugins": ["react"],
  "extends": [
    "airbnb",
    "plugin:react/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "import/first": "off",
    "import/new-line-after-import": "off"
  },
  "settings": {
    "import/resolver": {
      "node": { "paths": ["src"] }
    }
  }
}